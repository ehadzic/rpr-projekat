<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="103.0" prefWidth="309.0" style="-fx-padding: 10px;"
      xmlns="http://javafx.com/javafx/8.0.171">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Username:"/>
                <Label text="Password:" GridPane.rowIndex="1"/>
                <TextField fx:id="fldUsername" GridPane.columnIndex="1"/>
                <PasswordField fx:id="fldPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button alignment="CENTER" mnemonicParsing="false" text="Login"/>
            </buttons>
        </ButtonBar>
    </children>
</VBox>
